# Production Environment Configuration (Linux Server)
NODE_ENV=production
PORT=5000

# Database - Your production PostgreSQL server
DATABASE_URL=postgresql://ibiki_user:secure_password@localhost:5432/ibiki_sms_production

# Session & JWT Secrets (Use strong, unique secrets)
SESSION_SECRET=your-very-secure-session-secret-here
JWT_SECRET=your-very-secure-jwt-secret-here

# Email Service (Resend)
RESEND_API_KEY=your-production-resend-api-key

# SMS Service (ExtremeSMS)
EXTREMESMS_API_KEY=your-production-extremesms-api-key
EXTREMESMS_SENDER_ID=your-production-sender-id

# Production specific settings
DEBUG=false
LOG_LEVEL=info
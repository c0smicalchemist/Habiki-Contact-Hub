{
  "name": "Habiki Contact Hub",
  "description": "A comprehensive social media contact management system with bulk messaging, contact scraping, and multi-platform export capabilities.",
  "repository": "https://github.com/c0smicalchemist/Habiki-Contact-Hub",
  "author": "c0smicalchemist",
  "logo": "https://raw.githubusercontent.com/c0smicalchemist/Habiki-Contact-Hub/main/habiki-logo-3people.svg",
  "tags": ["social-media", "contact-management", "bulk-messaging", "scraping", "export", "react", "nodejs", "postgresql"],
  "website": "https://github.com/c0smicalchemist/Habiki-Contact-Hub",
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token generation (minimum 32 characters)",
      "generator": "secret",
      "required": true
    },
    "SESSION_SECRET": {
      "description": "Secret key for session encryption (minimum 32 characters)",
      "generator": "secret",
      "required": true
    },
    "PORT": {
      "description": "Port to run the application on",
      "value": "${{PORT}}",
      "required": false
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string (automatically provided by Railway)",
      "value": "${{DATABASE_URL}}",
      "required": false
    },
    "CORS_ORIGIN": {
      "description": "CORS origin for the application",
      "value": "https://${{RAILWAY_PUBLIC_DOMAIN}}",
      "required": false
    },
    "TRUST_PROXY": {
      "description": "Trust proxy headers",
      "value": "true",
      "required": false
    },
    "RATE_LIMIT_WINDOW_MS": {
      "description": "Rate limiting window in milliseconds",
      "value": "900000",
      "required": false
    },
    "RATE_LIMIT_MAX_REQUESTS": {
      "description": "Maximum requests per rate limit window",
      "value": "100",
      "required": false
    },
    "SCRAPING_RATE_LIMIT_DELAY": {
      "description": "Delay between scraping requests in milliseconds",
      "value": "2000",
      "required": false
    },
    "MAX_SCRAPING_THREADS": {
      "description": "Maximum concurrent scraping threads",
      "value": "5",
      "required": false
    },
    "MAX_EXPORT_RECORDS": {
      "description": "Maximum records for export",
      "value": "10000",
      "required": false
    },
    "EXPORT_BATCH_SIZE": {
      "description": "Batch size for export operations",
      "value": "1000",
      "required": false
    }
  },
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run railway:build",
    "startCommand": "npm run railway:start",
    "installCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm run railway:start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "addons": [
    {
      "type": "postgresql",
      "name": "habiki-contact-hub-db",
      "description": "PostgreSQL database for Habiki Contact Hub"
    }
  ]
}